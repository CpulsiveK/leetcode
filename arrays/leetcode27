    def removeElement(self, nums, val):
        """
        :type nums: List[int]
        :type val: int
        :rtype: int
        """

        try:
            if len(nums) == 0:
                return
            
            while val in nums:
                nums.remove(val)
            
        except ValueError as err:
            print(err)


sol = Solution()
res = sol.removeElement([1,2], 2)

